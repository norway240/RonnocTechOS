Args = { ... }
local side = Args[1]
local textsize = Args[2]

local mon = peripheral.wrap(side)
local sec = 0
local min = 0
local hr = 0

textsize = textsize + 0
mon.setTextScale(textsize)
mon.setTextColor(colors.lime)

while true do
  mon.clear()
  mon.setCursorPos(1,1)
  mon.write(hr..":"..min..":"..sec)
  sec = sec + 1
  if sec == 60 then
    sec = 0
    min = min + 1
  end
  if min == 60 then
    min = 0
    min = min + 1
  end
  sleep(1)
end
