local Args = { ... }
local side = Args[1]
local state = Args[2]

local usage = "Usage: music <side> <play/stop/eject>"

if (disk.isPresent(side)) and (disk.hasAudio(side)) then
  if state == "play" then
    disk.playAudio(side)
    print("Now Playing: "..disk.getAudioTitle(side))
  elseif state == "stop" then
    disk.stopAudio(side)
    print("Music Stopped!")
  elseif state == "eject" then
    disk.eject(side)
    print("Disk Ejected!")
  end
else 
  print("Invalid / No disk!")
end

